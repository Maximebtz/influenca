{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:tailwindcss/recommended"
  ],
  "settings": {
    "tailwindcss": {
      "callees": ["cn", "clsx"],
      "config": "tailwind.config.ts",
      "cssFiles": [
        "**/*.css",
        "!**/node_modules",
        "!**/.*",
        "!**/dist",
        "!**/build"
      ],
      "removeDuplicates": true,
      "classRegex": "^(class(Name)?|tw)$"
    }
  }
}
